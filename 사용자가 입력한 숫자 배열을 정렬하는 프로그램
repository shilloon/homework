#include <iostream>

using namespace std;
// 버블정렬을 이용힌 정렬 알고리즘으로 오름차순 내림차순을 만들었다
void Ascending(int arr[], int num) {

	int temp = 0;

	for (int i = 0; i < num; i++) {

		for (int j = 1; j < num; j++)
		{

			if (arr[j] < arr[j - 1]) {

				temp = arr[j - 1];
				arr[j - 1] = arr[j];
				arr[j] = temp;

			}

		}

	}
	cout << "오름차순으로 정리된 값 : ";
	for (int i = 0; i < num; i++) {

		cout << arr[i] << " ";

	}

}

void Descending(int arr[], int num) {

	int temp = 0;

	for (int i = 0; i < num; i++) {

		for (int j = 1; j < num; j++) {

			if (arr[j] > arr[j - 1]) {

				temp = arr[j];
				arr[j] = arr[j - 1];
				arr[j - 1] = temp;

			}

		}

	}

	cout << "내림차순으로 정리된 값 : ";
	for (int i = 0; i < num; i++) {

		cout << arr[i] << " ";

	}

}

int main() {

	int storage[1001];

	int selectnum;

	int numbers;
	cout << "받을 숫자 갯수를 정해주세요 : ";
	cin >> numbers;

	for (int i = 0; i < numbers; i++) {

		cin >> storage[i];

	}

	cout << "1은 오름차순 2는 내림차순 골라주세요 : ";
	cin >> selectnum;

	if (selectnum == 1) {

		Ascending(storage, numbers);

	}
	else if (selectnum == 2) {

		Descending(storage, numbers);

	}
	else 
		cout << "잘못된 선택지를 고르셨습니다." << endl;

	return 0;
}
