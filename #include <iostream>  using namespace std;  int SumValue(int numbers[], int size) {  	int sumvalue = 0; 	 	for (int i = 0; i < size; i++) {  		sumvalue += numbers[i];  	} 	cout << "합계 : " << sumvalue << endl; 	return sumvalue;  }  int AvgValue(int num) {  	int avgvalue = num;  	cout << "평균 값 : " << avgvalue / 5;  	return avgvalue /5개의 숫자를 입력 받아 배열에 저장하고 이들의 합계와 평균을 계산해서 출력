#include <iostream>

using namespace std;

// 받은 배열 값의 합을 구하는 함수
int SumValue(int numbers[], int size) {

	int sumvalue = 0;
	
	for (int i = 0; i < size; i++) {

		sumvalue += numbers[i];

	}
	cout << "합계 : " << sumvalue << endl;
	return sumvalue;

}

// 받은 배열 값의 평균을 구하는 함수
int AvgValue(int num) {

	int avgvalue = num;

	cout << "평균 값 : " << avgvalue / 5;

	return avgvalue / 5;
}

int main() {

	int numbers[5];

// 값을 저장
	for (int i = 1; i <=5; i++) {

		cout << i << "번째 숫자를 입력해주세요 : ";
		cin >> numbers[i - 1];

	}

	int sum = SumValue(numbers, 5);
	AvgValue(sum);
	return 0;
}
